<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".OpRegistrationActivity">
    <ScrollView
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_add_op_lay"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_space"
    android:layout_margin="@dimen/margin_space"
    android:background="@drawable/sign_text_shape"
    >
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        style="@style/AppTheme"
        />
</RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_space"
            android:layout_margin="@dimen/margin_space"
            android:background="@drawable/sign_text_shape"
            >
            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"

                style="@style/AppTheme"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_space"
            android:layout_margin="@dimen/margin_space"
            android:background="@drawable/sign_text_shape"
            >
            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"


                style="@style/AppTheme"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_space"
            android:layout_margin="@dimen/margin_space"
            android:background="@drawable/sign_text_shape"
            >
            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"

                style="@style/AppTheme"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_space"
            android:layout_margin="@dimen/margin_space"
            android:background="@drawable/sign_text_shape"
            >
          <EditText
              android:id="@+id/date_of_reg"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Date of Reg"
              android:background="@color/colorWhite"

              />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_space"
            android:layout_margin="@dimen/margin_space"
            android:background="@drawable/sign_text_shape"
            >
            <EditText
                android:id="@+id/slot_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Slot Time"
                android:background="@color/colorWhite"

                />
        </RelativeLayout>




    </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/btn_add_op_lay"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_space"
        android:layout_margin="@dimen/margin_space"
        android:background="@drawable/sign_button_shape"
        >
        <TextView
            android:id="@+id/btn_add_op"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_op"
            android:gravity="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/colorWhite"
            />

    </RelativeLayout>

</RelativeLayout>